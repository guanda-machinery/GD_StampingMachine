<UserControl x:Class="GD_StampingMachine.UserControls.SettingButtonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GD_StampingMachine.UserControls"
             mc:Ignorable="d" >
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
        <Button Name="LoadModeButton" Content="{DynamicResource btnLoadMode}" Margin="10" Command="{Binding LoadSettingCommand}"/>
        <Button Name="RecoverSettingButton" Content="{DynamicResource btnRecover}"  Margin="10" Command="{Binding RecoverSettingCommand}"/>
        <Button Name="SaveSettingModeButton" Content="{DynamicResource btnSave}"  Margin="10" Command="{Binding SaveSettingCommand}"/>
    </StackPanel>
</UserControl>
