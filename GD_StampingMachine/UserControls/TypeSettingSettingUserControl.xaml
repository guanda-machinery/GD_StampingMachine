                                                        <MultiBinding.Bindings>
                                                            <Binding RelativeSource="{RelativeSource AncestorType={x:Type dxg:GridControl}}"/>
                                                            <Binding ElementName="NotReadyToTypeSettingProductProjectGridControl"/>
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </Button.CommandParameter>
                                            </Button>

                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>

                            </dxg:GridControl>
