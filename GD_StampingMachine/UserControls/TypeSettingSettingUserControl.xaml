                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition MinWidth="100"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
