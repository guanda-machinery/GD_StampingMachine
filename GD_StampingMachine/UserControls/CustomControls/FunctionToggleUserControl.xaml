<UserControl x:Class="GD_StampingMachine.UserControls.CustomControls.FunctionToggleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:GD_StampingMachine.UserControls.CustomControls" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:GD_Common="clr-namespace:GD_CommonLibrary;assembly=GD_CommonLibrary"
             mc:Ignorable="d" 
             Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" 
             BorderBrush="{DynamicResource PrimaryHueMidForegroundBrush}"
             FontSize="14" 

             x:Name="MainFunctionToggleUserControl" d:Background="Black" Cursor="Hand" >
    <Grid 
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
        <ToggleButton IsChecked="{Binding IsChecked}" IsThreeState="{Binding IsThreeState}" x:Name="Toggle" Content="{Binding ButtonContent, Mode=OneWay}">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton" >
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Path=Foreground}"/>
                    <Setter Property="FontSize" Value="{Binding Path=FontSize}"/>
                    <Setter Property="FontWeight" Value="{Binding Path=FontWeight}"/>
                    <Setter Property="FontFamily" Value="{Binding Path=FontFamily}"/>
                    <Setter Property="FontStretch" Value="{Binding Path=FontStretch}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid>
                                    <Border Name="MainBorder">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <TransformGroup>
                                                            <TranslateTransform X="0" Y="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </TransformGroup>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <StackPanel 
                                        MinWidth="65" 
                                        Orientation="{Binding Orientation , ElementName=MainFunctionToggleUserControl}">
                                        <Grid Margin="5" Width="40" Height="40">
                                            <Image 
                                                    d:Width="40" d:Height="40" 
                                                    Source="{Binding ImageSource ,FallbackValue={StaticResource Logo}}"
                                                    Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"
                                                    Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"/>
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                            <!--自定義方塊-->
                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40">
                                                <Grid Visibility="{Binding IsChecked, Converter={dx:BooleanToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="{Binding IsCheckedKind}"  d:Width="40" d:Height="40" d:Visibility="Collapsed"
                                                                             Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"  
                                                                             Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"
                                                                 Visibility="{Binding IsCheckedKind,Converter={dx:NullableToVisibilityConverter}}"/>
                                                </Grid>
                                                <Grid Visibility="{Binding IsChecked, Converter={dx:BooleanToVisibilityConverter Invert=True}}">
                                                    <materialDesign:PackIcon Kind="{Binding UnCheckedKind}"  d:Width="40" d:Height="40" d:Visibility="Collapsed"
                                                                             Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"  
                                                                             Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"
                                                                 Visibility="{Binding UnCheckedKind,Converter={dx:NullableToVisibilityConverter}}"/>
                                                </Grid>
                                            </Grid>

                                        </Grid>
                                        <Grid Grid.Row="1" >
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="{Binding TextMargin , ElementName=MainFunctionToggleUserControl}"/>
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="FontSize" Value="{Binding FontSize , ElementName=MainFunctionToggleUserControl}"/>
                                                </Style>
                                            </Grid.Resources>
                                            <TextBlock  TextWrapping="WrapWithOverflow" MaxWidth="80" 
                                                Text="{Binding UnCheckedTitleText,FallbackValue=Text}" >
                                                <TextBlock.Visibility>
                                                    <MultiBinding Converter="{GD_Common:MultiBooleanToVisibilityConverter SetOperation=Union}" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" >
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="IsChecked" Converter="{dx:BoolInverseConverter}"/>
                                                            <Binding Path="IsCheckedTitleText" Converter="{GD_Common:ObjectIsNullToBooleanConverter}"/>
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </TextBlock.Visibility>
                                            </TextBlock>
                                            <TextBlock   MaxWidth="80" 
                                                Text="{Binding IsCheckedTitleText,FallbackValue=Text}"  TextWrapping="Wrap" >
                                            <TextBlock.Visibility>
                                                <MultiBinding Converter="{GD_Common:MultiBooleanToVisibilityConverter SetOperation=Intersection}" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" >
                                                    <MultiBinding.Bindings>
                                                        <Binding Path="IsChecked"/>
                                                        <Binding Path="IsCheckedTitleText" Converter="{GD_Common:ObjectIsNullToBooleanConverter Invert=True}"/>
                                                    </MultiBinding.Bindings>
                                                </MultiBinding>
                                            </TextBlock.Visibility>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger  Property="IsChecked" Value="True">
                                        <Setter TargetName="MainBorder" Property="BorderBrush" Value="{Binding BorderBrush}" />
                                        <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                    <Trigger  Property="IsMouseOver" Value="True">
                                        <Setter TargetName="MainBorder" Property="Background" Value="Orange"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True" />
                                            <Condition Property="IsChecked" Value="True" />
                                            <Condition Property="IsPressed" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="1"/>
                                        <Setter TargetName="MainBorder" Property="Background" Value="OrangeRed"/>
                                    </MultiTrigger>
                                    <EventTrigger RoutedEvent="DragEnter">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                            Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.100" To="Orange" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="DragLeave">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                        Storyboard.TargetProperty="Background.Color" Duration="0:0:0.500" To="Transparent"  />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>


                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>
