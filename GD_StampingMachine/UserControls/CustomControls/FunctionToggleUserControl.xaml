<UserControl x:Class="GD_StampingMachine.UserControls.CustomControls.FunctionToggleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:GD_StampingMachine.UserControls.CustomControls"
             mc:Ignorable="d" Foreground="White" FontSize="14" MinWidth="70" 
             x:Name="MainFunctionToggleUserControl" d:Background="Black"  >
    <Grid
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
        <!--<Border BorderBrush="Red" BorderThickness="1" Visibility="{Binding IsChecked, Converter={dx:BooleanToVisibilityConverter}}"/-->
        <ToggleButton IsChecked="{Binding IsChecked}" Name="Toggle">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton" >
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Path=Foreground}"/>
                    <Setter Property="FontSize" Value="{Binding Path=FontSize}"/>
                    <Setter Property="FontWeight" Value="{Binding Path=FontWeight}"/>
                    <Setter Property="FontFamily" Value="{Binding Path=FontFamily}"/>
                    <Setter Property="FontStretch" Value="{Binding Path=FontStretch}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Border Name="MainBorder">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter Property="BorderThickness" Value="1.5"/>
                                            <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=IsChecked}" Value="True">
                                                    <Setter Property="BorderBrush" Value="#cccccc" />
                                                    <Setter Property="Background" Value="#575757" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=IsChecked}" Value="False">
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                </DataTrigger>

                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border  >

                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <TransformGroup>
                                                            <TranslateTransform X="0" Y="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </TransformGroup>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.3"/>
                                                    </Trigger>

                                                    <EventTrigger RoutedEvent="Border.MouseEnter">
                                                        
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.2" From="#383838" To="OrangeRed" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="Border.MouseLeave">
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <!--離開-->
                                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color"   Duration="0:0:0.2" To="#383838" />
                                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color" BeginTime="0:0:0.2"  Duration="0:0:0.0" From="#383838" To="Transparent" />
                                                                    <DoubleAnimationUsingKeyFrames  Storyboard.TargetProperty="LayoutTransform.Children[1].Angle"  RepeatBehavior="1x">
                                                                        <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0"/>
                                                                    </DoubleAnimationUsingKeyFrames>

                                                                    <DoubleAnimation   Storyboard.TargetProperty="LayoutTransform.Children[2].ScaleX"  RepeatBehavior="1x"
                                               To="1" Duration="0:0:0.1"
                                               />
                                                                    <DoubleAnimation   Storyboard.TargetProperty="LayoutTransform.Children[2].ScaleY"  RepeatBehavior="1x"
                                                 To="1" Duration="0:0:0.1"
                                               />

                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="DragEnter">
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.100" To="Orange" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="DragLeave">
                                                        <EventTrigger.Actions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetProperty="Background.Color" Duration="0:0:0.200" To="Transparent" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger.Actions>
                                                    </EventTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>


                                            <StackPanel Orientation="{Binding Orientation , ElementName=MainFunctionToggleUserControl}">
                                            <Image  Margin="5" d:Source="{StaticResource Logo}"
                                                    d:Width="40" d:Height="40"
                                                    Source="{Binding ImageSource}"
                                                    Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"
                                                    Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"/>
                                            <TextBlock Margin="{Binding TextMargin , ElementName=MainFunctionToggleUserControl}" TextWrapping="Wrap"
                                                Grid.Row="1" Text="{Binding TitleText}"   d:Text="Text"
                                                       HorizontalAlignment="Center"  VerticalAlignment="Center"
                                                       FontSize="{Binding FontSize , ElementName=MainFunctionToggleUserControl}" />
                                            </StackPanel>
                              
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>
