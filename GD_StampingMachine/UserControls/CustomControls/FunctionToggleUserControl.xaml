<UserControl x:Class="GD_StampingMachine.UserControls.FunctionToggleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:GD_StampingMachine.UserControls" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:GD_Common="clr-namespace:GD_CommonLibrary;assembly=GD_CommonLibrary"
             mc:Ignorable="d" 
             FontSize="14" 

             x:Name="MainFunctionToggleUserControl" d:Background="Black" Cursor="Hand" >
    <Grid 
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
        <ToggleButton 
            Command="{Binding Command}"
            CommandTarget="{Binding CommandTarget}"
            CommandParameter="{Binding CommandParameter}"          
           IsChecked="{Binding IsChecked}"
            IsThreeState="{Binding IsThreeState}" x:Name="Toggle"
            Content="{Binding ButtonContent, Mode=OneWay}">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Path=Foreground}"/>
                    <Setter Property="FontSize" Value="{Binding Path=FontSize}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontFamily" Value="{StaticResource Inter}"/>
                    <Setter Property="FontStretch" Value="{Binding Path=FontStretch}"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid>
                                    <Border Name="MainBorder">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <TransformGroup>
                                                            <TranslateTransform X="0" Y="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </TransformGroup>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <StackPanel 
                                        MinWidth="65" 
                                        Orientation="{Binding Orientation , ElementName=MainFunctionToggleUserControl}">
                                        <Grid >
                                            <Border >
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Opacity" Value="0.3"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid Margin="5">

                                                    <Image 
                                                    d:Width="40" d:Height="40" 
                                                    Source="{Binding ImageSource ,FallbackValue={StaticResource Logo}}"
                                                    Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"
                                                    Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"/>
                                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                    <!--自定義方塊-->
                                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40">

                                                        <materialDesign:PackIcon Kind="{Binding PackIconKind}"  d:Width="40" d:Height="40" d:Visibility="Collapsed"
                                                                             Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"  
                                                                             Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"
                                                                 Visibility="{Binding PackIconKind,Converter={dx:NullableToVisibilityConverter}}"/>

                                                    </Grid>
                                                </Grid>
                                            </Border>
                                            <ProgressBar Width="40" Height="40"
                                            Opacity="0.95" Minimum="0" Maximum="100" 
                                                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                             Visibility="{Binding ProgressVisibility}" Value="{Binding Progress}"
                                                             IsIndeterminate="{Binding IsIndeterminate}">
                                                <i:Interaction.Behaviors>
                                                    <GD_Common:ProgresBarAnimateBehavior />
                                                </i:Interaction.Behaviors>
                                                <ProgressBar.Foreground>
                                                    <Binding Path="Value" RelativeSource="{RelativeSource Mode=Self}" Converter="{GD_Common:MultiBrushes_DoubleToSolidBrushConverter SliderMin=0 ,SliderMax=100}">
                                                        <Binding.ConverterParameter>
                                                            <x:Array Type="SolidColorBrush">
                                                                <SolidColorBrush Color="Red"/>
                                                                <SolidColorBrush Color="SkyBlue"/>
                                                                <SolidColorBrush Color="Green"/>
                                                            </x:Array>
                                                        </Binding.ConverterParameter>
                                                    </Binding>
                                                </ProgressBar.Foreground>

                                            </ProgressBar>
                                        </Grid>
                                        <Grid Grid.Row="1" >
                                            <TextBlock   MaxWidth="80" 
                                                         Margin="{Binding TextMargin , ElementName=MainFunctionToggleUserControl}"
                                                         
                                                         FontFamily="{Binding FontFamily , ElementName=MainFunctionToggleUserControl}"
                                                         FontSize="{Binding FontSize , ElementName=MainFunctionToggleUserControl}"
                                                         FontWeight="{Binding FontWeight , ElementName=MainFunctionToggleUserControl}"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Text="{Binding ControlTitleText,FallbackValue=Text}"  TextWrapping="Wrap" >
                                                <TextBlock.Visibility>
                                                    <MultiBinding Converter="{GD_Common:MultiBooleanToVisibilityConverter SetOperation=Intersection}" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" >
                                                        <MultiBinding.Bindings>
                                                            <Binding Path="ControlTitleText" Converter="{GD_Common:ObjectIsNullToBooleanConverter Invert=True}"/>
                                                        </MultiBinding.Bindings>
                                                    </MultiBinding>
                                                </TextBlock.Visibility>
                                            </TextBlock>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger  Property="IsChecked" Value="True">
                                        <Setter TargetName="MainBorder" Property="BorderThickness" Value="{Binding Path=IsCheckedBorderThickness , ElementName=MainFunctionToggleUserControl}" />
                                        <Setter TargetName="MainBorder" Property="BorderBrush" Value="#acacac" />
                                        <!--      <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>-->
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.4"/>
                                    </Trigger>

                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsChecked" Value="True" />
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="MainBorder" Property="Background" Value="{Binding Path=IsCheckedBackground , ElementName=MainFunctionToggleUserControl}"/>
                                    </MultiTrigger>

                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                    <Trigger  Property="IsMouseOver" Value="True">
                                        <Setter TargetName="MainBorder" Property="Background" Value="{Binding Path=MouseIsOverBackground , ElementName=MainFunctionToggleUserControl}"/>
                                    </Trigger>


                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True" />
                                            <Condition Property="IsChecked" Value="True" />
                                            <Condition Property="IsPressed" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="MainBorder" Property="BorderThickness" Value="0" />
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="1"/>
                                        <Setter TargetName="MainBorder" Property="Background" Value="DarkGray"/>
                                    </MultiTrigger>

                                    <EventTrigger RoutedEvent="DragOver">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                            Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.100" To="Gray" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="DragEnter">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                            Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.100" To="Orange" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="DragLeave">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                        Storyboard.TargetProperty="Background.Color" Duration="0:0:0.500" To="Transparent"  />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>
