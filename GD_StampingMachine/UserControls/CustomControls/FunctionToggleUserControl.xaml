<UserControl x:Class="GD_StampingMachine.UserControls.CustomControls.FunctionToggleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:local="clr-namespace:GD_StampingMachine.UserControls.CustomControls" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" 
             BorderBrush="{DynamicResource PrimaryHueMidForegroundBrush}"
             FontSize="14" MinWidth="65"  
             x:Name="MainFunctionToggleUserControl" d:Background="Black" Cursor="Hand" >
    <Grid
        DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}">
        <ToggleButton IsChecked="{Binding IsChecked}" IsThreeState="{Binding IsThreeState}" x:Name="Toggle">

            <ToggleButton.Style>
                <Style TargetType="ToggleButton" >
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding Path=Foreground}"/>
                    <Setter Property="FontSize" Value="{Binding Path=FontSize}"/>
                    <Setter Property="FontWeight" Value="{Binding Path=FontWeight}"/>
                    <Setter Property="FontFamily" Value="{Binding Path=FontFamily}"/>
                    <Setter Property="FontStretch" Value="{Binding Path=FontStretch}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Grid>
                                    <Border Name="MainBorder">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                                <Setter Property="CornerRadius" Value="{Binding CornerRadius}"/>
                                                <Setter Property="LayoutTransform">
                                                    <Setter.Value>
                                                        <TransformGroup>
                                                            <TranslateTransform X="0" Y="0"/>
                                                            <RotateTransform Angle="0"/>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </TransformGroup>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <StackPanel Orientation="{Binding Orientation , ElementName=MainFunctionToggleUserControl}">
                                        <Grid Margin="5" MinWidth="40" MinHeight="40">
                                            <Image   Visibility="{Binding ElementName=CustomButtonContent, Path=Content, Converter={dx:NullableToVisibilityConverter Invert=True}}"
                                                    d:Width="40" d:Height="40" 
                                                    Source="{Binding ImageSource ,FallbackValue={StaticResource Logo}}"
                                                    Width="{Binding ImageWidth , ElementName=MainFunctionToggleUserControl}"
                                                    Height="{Binding ImageHeight, ElementName=MainFunctionToggleUserControl}"/>

                                            <!--自定義方塊-->

                                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="40" Height="40">
                                                <Grid Visibility="{Binding IsChecked, Converter={dx:BooleanToVisibilityConverter}}">
                                                    <materialDesign:PackIcon Kind="{Binding IsCheckedKind}"  Width="auto" Height="auto"
                                                                 Visibility="{Binding IsCheckedKind,Converter={dx:NullableToVisibilityConverter}}"/>
                                                </Grid>
                                                <Grid Visibility="{Binding IsChecked, Converter={dx:BooleanToVisibilityConverter Invert=True}}">
                                                    <materialDesign:PackIcon Kind="{Binding UnCheckedKind}" Width="auto" Height="auto"
                                                                 Visibility="{Binding UnCheckedKind,Converter={dx:NullableToVisibilityConverter}}"/>
                                            </Grid>
                                        </Grid>

                                        </Grid>

                                        <TextBlock Margin="{Binding TextMargin , ElementName=MainFunctionToggleUserControl}" TextWrapping="Wrap"
                                                Grid.Row="1" Text="{Binding TitleText,FallbackValue=Text}"  
                                                       HorizontalAlignment="Center"  VerticalAlignment="Center"
                                                       FontSize="{Binding FontSize , ElementName=MainFunctionToggleUserControl}" />
                                    </StackPanel>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger  Property="IsChecked" Value="True">
                                        <Setter TargetName="MainBorder" Property="BorderBrush" Value="{Binding BorderBrush}" />
                                        <Setter TargetName="MainBorder" Property="Background" Value="Gray"/>
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.7"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="0.3"/>
                                    </Trigger>
                                    <Trigger  Property="IsMouseOver" Value="True">
                                        <Setter TargetName="MainBorder" Property="Background" Value="Orange"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True" />
                                            <Condition Property="IsChecked" Value="True" />
                                            <Condition Property="IsPressed" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="MainBorder" Property="Opacity" Value="1"/>
                                        <Setter TargetName="MainBorder" Property="Background" Value="OrangeRed"/>
                                    </MultiTrigger>
                                    <EventTrigger RoutedEvent="DragEnter">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                            Storyboard.TargetProperty="Background.Color" 
                                                        Duration="0:0:0.100" To="Orange" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="DragLeave">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard Storyboard.TargetName="MainBorder">
                                                    <ColorAnimation 
                                                        Storyboard.TargetProperty="Background.Color" Duration="0:0:0.500" To="Transparent"  />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>


                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>
