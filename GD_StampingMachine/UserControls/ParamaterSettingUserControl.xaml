                                    <StackPanel  Grid.Row="3" Orientation="Horizontal" Margin="0,10" >
                                        <TextBlock Text="D"/>
                                        <TextBlock Text="{DynamicResource textMargin}" materialDesign:HintAssist.Hint="{DynamicResource textInputMargin}"/>
                                        <TextBlock Text="："/>
                                    </StackPanel>
                                    <TextBox   Grid.Row="3" Grid.Column="1" materialDesign:HintAssist.Hint="{DynamicResource textInputMargin}"  Text="{Binding NumberSetting.PlateMargin.D_Margin}"  />
                                    <TextBlock Text="mm" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="10,0"/>

                                    <StackPanel  Grid.Row="4" Orientation="Horizontal" Margin="0,10" >
                                        <TextBlock Text="E"/>
                                        <TextBlock Text="{DynamicResource textMargin}"/>
                                        <TextBlock Text="："/>
                                    </StackPanel>
                                    <TextBox  Grid.Row="4"  Grid.Column="1" materialDesign:HintAssist.Hint="{DynamicResource textInputMargin}"  Text="{Binding NumberSetting.PlateMargin.E_Margin}"/>
                                    <TextBlock Text="mm" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right" Margin="10,0"/>

                                </Grid>




                            </GroupBox>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10" VerticalAlignment="Bottom">
                                <Button Content="{DynamicResource btnLoadMode}" Margin="10" Command="{Binding LoadModeCommand}"/>
                                <Button Content="{DynamicResource btnRecover}"  Margin="10" Command="{Binding RecoverSettingCommand}"/>
                                <Button Content="{DynamicResource btnSave}"  Margin="10" Command="{Binding SaveSettingCommand}"/>
                            </StackPanel>

                        </Grid>
                    </StackPanel>
                </TabItem>
                <TabItem  IsSelected="{Binding ElementName=TbtnQRSetting, Path=IsChecked}" DataContext="{Binding QRSettingVM}" Cursor="">
                    <Grid HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
