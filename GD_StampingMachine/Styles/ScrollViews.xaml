                            Grid.Row="2"
                            Command="{x:Static ScrollBar.PageDownCommand}"
                            Style="{StaticResource VerticalScrollBarPageButtonDown}"
                            Visibility="Collapsed" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="HorizontalScrollBar_STD" TargetType="{x:Type ScrollBar}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Height" Value="10" />
        <Setter Property="MinHeight" Value="5" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Margin" Value="3,0,16,0" />
        <Setter Property="Opacity" Value="0.1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid x:Name="Bg" SnapsToDevicePixels="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <RepeatButton
                            Grid.Column="0"
                            Command="{x:Static ScrollBar.PageLeftCommand}"
                            Style="{StaticResource HorizontalScrollBarPageButtonLeft}"
                            Visibility="Collapsed" />
                        <Track
                            x:Name="PART_Track"
                            Grid.Column="1"
                            IsDirectionReversed="False"
                            IsEnabled="{TemplateBinding IsMouseOver}"
                            Visibility="Collapsed">
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}" Style="{StaticResource HorizontalScrollBarPageButton_Office}" />
                            </Track.IncreaseRepeatButton>
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}" Style="{StaticResource HorizontalScrollBarPageButton_Office}" />
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ScrollBarThumb_STD}" />
                            </Track.Thumb>
                        </Track>
                        <RepeatButton
                            Grid.Column="2"
                            Command="{x:Static ScrollBar.PageRightCommand}"
                            Style="{StaticResource HorizontalScrollBarPageButtonRight}"
                            Visibility="Collapsed" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="lab_LayoutControl_STD" TargetType="{x:Type dxlc:DataLayoutItem}">
        <Setter Property="Foreground" Value="{StaticResource solidclr_CreamyWhite}" />
    </Style>
    <Style x:Key="gbx_LayoutControl_STD" TargetType="{x:Type dxlc:GroupBox}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="TitleBackground" Value="{StaticResource solidclr_DimGray}" />
        <Setter Property="Foreground" Value="{StaticResource solidclr_CreamyWhite}" />
    </Style>
    <Style x:Key="sbx_STD" TargetType="dxlc:ScrollBox">
        <Setter Property="ScrollBars" Value="None" />
        <Setter Property="AllowBringChildIntoView" Value="False" />
    </Style>
    <Style x:Key="sbx_Office" TargetType="dxlc:ScrollBox">
        <Setter Property="AllowBringChildIntoView" Value="False" />
        <Setter Property="VerticalScrollBarStyle" Value="{StaticResource VerticalScrollBar_Office}" />
        <Setter Property="HorizontalScrollBarStyle" Value="{StaticResource HorizontalScrollBar_Office}" />
    </Style>

    <Style TargetType="ScrollViewer" BasedOn="{StaticResource scrollviewer_STD}"/>


</ResourceDictionary>